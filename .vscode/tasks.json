{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++ Build and Run",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}/solution.cpp",
                "-o",
                "${fileDirname}/solution",
                "&&",
                "${fileDirname}/solution",
                "<",
                "${fileDirname}/input.txt",
                ">",
                "${fileDirname}/output.txt"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to compile and run C++ with input/output redirection"
        }
    ]
}